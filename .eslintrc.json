{
    "env": {
        "node": true,
        "es6": true,
        "jquery": true,
        "browser": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "plugins": ["react"],
    "rules": {
        "no-console": "off",
        "indent": ["warn", 4, { "SwitchCase": 1 }],
        "linebreak-style": ["error", "unix"],
        "quotes": ["off", "single"],
        "semi": ["error", "always"]
    },
    "globals": {
        "__PRODUCTION__": true,
        "__DEV__": true,
        "__CLIENT__": true,
        "__SERVER__": true,
        "__BACKEND_ROOT_URL__": true,
        "__PRERELEASE__": true
    }
}
